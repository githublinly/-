/*给外面的盒子添加样式和fixed定位*/
.box{
	position: fixed;
	left: 50%;
	top :50%;
	width: 300px;
	height: 150px;
	margin-left: -150px;
	margin-top: -75px;
	background-color:  lightskyblue;
}

/*给盒子1添加样式和relative定位*/
.box1{
	position: relative;
	width: 300px;
	height: 100px;
	/*默认透明色*/
	/*background-color:  transparent;*/
}

/*给盒子2添加样式和absolute定位*/
.box2{
	position: absolute;
	left: 50px;
	top: 50px;
	width: 200px;
	height: 100px;
}

/*给五个将要设置成环的盒子统一设置CSS样式*/
.circle{
	float: left;
	width: 80px;
	height: 80px;
	border-radius: 50%;
}
 
 /*分别给五个环盒子添加边框和颜色，边框即圆环*/
.color1{
 	border: 10px solid purple;
}

.color2{
 	border: 10px solid black;
}

.color3{
	border: 10px solid red;
}

.color4{
	border: 10px solid yellow;
}

.color5{
	border: 10px solid green;
}

